ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'menu_screen'
        manager: 'screen_manager'
    MainScreen:
        id: main_screen
        name: 'main_screen'
        manager: 'screen_manager'

<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.height, root.width
        BoxLayout:
            id: navigation_box
            orientation: 'horizontal'
            size_hint_y: 1
            Button:
                text_color: "white"
                size_hint_x: 1
                text: 'Prev image'
                font_size: 16
                on_release: root._load_previous_image()
            Label:
                id: img_name
                size_hint_x: 6
                font_size: 14
            Button:
                text_color: "white"
                text: 'Next image'
                size_hint_x: 1
                font_size: 16
                on_release: root._load_next_image()
        BoxLayout:
            id: inner_box
            orientation: 'horizontal'
            size_hint_y: 11
            BoxLayout:
                size_hint_x: 4
                id: image_box
                color: 'black'
                orientation: 'vertical'
                StencilView:
                    id: stencil1
                    size_hint_y: 12
                    Scatter:
                        pos: stencil1.pos
                        size: image.size
                        id: scatter_img_holder
                        Image:
                            id: image
                            size: 0, 0
                            source: 'Kivy-logo.jpg'
                            fit_mode: 'contain'
                BoxLayout:
                    size_hint_x: 1
                    id: bottom_menu_box
                    color: 'black'
                    orientation: 'horizontal'
                    Button:
                        size_hint: .3, 1
                        id: finish_scan_btn
                        text: 'Finish Scan'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'menu_screen'
                    Button:
                        size_hint: .3, 1
                        id: reset_evals_btn
                        text: 'Reset Evals'
                        on_press: root._on_reset_evals()
                    Button:
                        size_hint: .3, 1
                        id: zoom_in_btn
                        text: 'Zoom In'
                        on_press: root._on_zoom_in()
                    Button:
                        size_hint: .3, 1
                        id: zoom_out_btn
                        text: 'Zoom Out'
                        on_press: root._on_zoom_out()
                    Label:
                        size_hint: .15, 1
                        text: 'Resize'
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                    CheckBox:
                        size_hint: .1, 1
                        id: resize_check_box
                        on_active: root._on_resize_check_box(self.active)
                    
            BoxLayout:
                size_hint_x: 1
                id: eval_box
                orientation: 'vertical'
<MenuScreen>:
    color: "black"
    RelativeLayout:
        Button:
            text: 'Scan input'
            pos_hint: {'center_x': 0.3, 'center_y': 0.6}
            size_hint: .3, .1
            on_press: root._load_inputs()
        TextInput:
            hint_text: 'inputs'
            padding_y: [18,0]
            id: inputs_text
            font_size: 18
            size_hint: .4, .1
            pos_hint: {'center_x': 0.7, 'center_y': 0.6}
        Button:
            text: 'View databank'
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: .5, .1
            on_press: root._load_databank()
