ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'menu_screen'
        manager: 'screen_manager'
    MainScreen:
        id: main_screen
        name: 'main_screen'
        manager: 'screen_manager'

<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.height, root.width
        BoxLayout:
            id: navigation_box
            orientation: 'horizontal'
            size_hint_y: 1
            Button:
                text_color: "white"
                size_hint_x: 1
                text: 'Prev image'
                font_size: 16
                on_release: root._load_previous_image()
            Label:
                id: img_name
                size_hint_x: 6
                font_size: 14
            Button:
                text_color: "white"
                text: 'Next image'
                size_hint_x: 1
                font_size: 16
                on_release: root._load_next_image()
        BoxLayout:
            id: inner_box
            orientation: 'horizontal'
            size_hint_y: 11
            BoxLayout:
                size_hint_x: 4
                id: image_box
                color: 'black'
                orientation: 'vertical'
                Image:
                    id: image
                    size_hint_y: 12
                    source: 'Kivy-logo.jpg'
                BoxLayout:
                    size_hint_x: .3
                    id: bottom_menu_box
                    color: 'black'
                    orientation: 'horizontal'
                    Button:
                        size_hint: .3, 1
                        id: finish_scan_btn
                        text: 'Finish Scan'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'menu_screen'
                    Button:
                        size_hint: .3, 1
                        id: reset_evals_btn
                        text: 'Reset Evals'
                        on_press: root._on_reset_evals()
            BoxLayout:
                size_hint_x: 1
                id: eval_box
                orientation: 'vertical'
<MenuScreen>:
    color: "black"
    RelativeLayout:
        Button:
            text: 'Scan input'
            pos_hint: {'center_x': 0.3, 'center_y': 0.6}
            size_hint: .3, .1
            on_press: root._load_inputs()
            # on_release: app.root.current = 'main_screen'
        TextInput:
            hint_text: 'inputs'
            padding_y: [18,0]
            id: inputs_text
            font_size: 18
            size_hint: .4, .1
            pos_hint: {'center_x': 0.7, 'center_y': 0.6}
        Button:
            text: 'View databank'
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: .5, .1
            on_press: root._load_databank()
            # on_release: app.root.current = 'main_screen'
