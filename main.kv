ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'menu_screen'
        manager: 'screen_manager'
    MainScreen:
        id: main_screen
        name: 'main_screen'
        manager: 'screen_manager'

<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.height, root.width
        BoxLayout:
            id: navigation_box
            orientation: 'horizontal'
            size_hint_y: 1
            Button:
                text_color: "white"
                size_hint_x: 1
                text: 'Prev image'
                font_size: 16
                on_release: root._load_previous_image()
            Label:
                id: img_name
                size_hint_x: 6
                font_size: 14
            Button:
                text_color: "white"
                text: 'Next image'
                size_hint_x: 1
                font_size: 16
                on_release: root._load_next_image()
        BoxLayout:
            id: inner_box
            orientation: 'horizontal'
            size_hint_y: 11
            BoxLayout:
                size_hint_x: 4
                id: image_box
                color: 'black'
                orientation: 'vertical'
                Image:
                    id: image
                    size_hint_y: 12
                    source: 'Kivy-logo.jpg'
                Button:
                    size_hint_y: 1
                    text: 'Goto settings'
                    on_press:
                        app.root.transition.direction = 'left'
                        app.root.current = 'menu_screen'
            BoxLayout:
                size_hint_x: 1
                id: eval_box
                orientation: 'vertical'
<MenuScreen>:
    color: "black"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'ASCII Life'
            font_size: 50
        Button:
            text_color: "white"
            text: 'Oh no go back'
            font_size: 24
            on_release: app.root.current = 'main_screen'
        Label:
            text: 'Menu label'
