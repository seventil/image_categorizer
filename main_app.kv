<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size: root.height, root.width
        BoxLayout:
            id: navigation_box
            orientation: 'horizontal'
            size_hint_y: 1
            Button:
                text_color: "white"
                size_hint_x: 1
                text: 'Prev image'
                font_size: 16
                on_release: root._load_previous_image()
            Label:
                text: "IMG"
                id: img_name
                size_hint_x: 6
                font_size: 14
            Button:
                text_color: "white"
                text: 'Next image'
                size_hint_x: 1
                font_size: 16
                on_release: root._load_next_image()
        BoxLayout:
            id: inner_box
            orientation: 'horizontal'
            size_hint_y: 11
            Image:
                id: image
                fit_mode: 'contain'
                size_hint_x: 4

            BoxLayout:
                size_hint_x: 1
                id: eval_box
                orientation: 'vertical'
